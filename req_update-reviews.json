{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/update-reviews.request.schema.json",
  "title": "Update Reviews Request",
  "type": "object",
  "properties": {
    "reviews": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "sku": { "type": "string" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
          "title": { "type": "string" },
          "text": { "type": "string" },
          "author": { "type": "string" },
          "author_email": { "type": "string", "format": "email" },
          "status": { "type": "string" }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    }
  },
  "required": ["reviews"],
  "additionalProperties": false
}
